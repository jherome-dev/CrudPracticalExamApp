@page "/employees/details"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using CrudPracticalExam.Models
@inject IDbContextFactory<CrudPracticalExam.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Employee</h2>
    <hr />
    @if (employee is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">FullName</dt>
            <dd class="col-sm-10">@employee.FullName</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@employee.Email</dd>
            <dt class="col-sm-2">Position</dt>
            <dd class="col-sm-10">@employee.Position</dd>
            <dt class="col-sm-2">Salary</dt>
            <dd class="col-sm-10">@employee.Salary</dd>
            <dt class="col-sm-2">DateHired</dt>
            <dd class="col-sm-10">@employee.DateHired</dd>
        </dl>
        <div>
            <a class="btn btn-secondary" href="@($"/employees")"><i class="bi bi-arrow-left"></i>Back to List</a>
            
        </div>
    }
</div>

@code {
    private Employee? employee;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        employee = await context.Employees.FirstOrDefaultAsync(m => m.Id == Id);

        if (employee is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}

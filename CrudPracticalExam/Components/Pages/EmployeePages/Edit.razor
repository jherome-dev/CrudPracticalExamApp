@page "/employees/edit"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using CrudPracticalExam.Models
@inject IDbContextFactory<CrudPracticalExam.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Employee</h2>
<hr />
@if (Employee is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Employee" OnValidSubmit="UpdateEmployee" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Employee.Id" value="@Employee.Id" />
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="fullname" class="form-label">FullName:</label>
                    <InputText id="fullname" @bind-Value="Employee.FullName" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Employee.FullName" class="text-danger" />
                </div>
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="email" class="form-label">Email:</label>
                    <InputText id="email" @bind-Value="Employee.Email" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Employee.Email" class="text-danger" />
                </div>
                <div class="mb-3">
                <span class="text-danger">*</span>
                    <label for="position" class="form-label">Position:</label>
                    <InputText id="position" @bind-Value="Employee.Position" class="form-control" aria-required="true"/>
                    <ValidationMessage For="() => Employee.Position" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="salary" class="form-label">Salary:</label>
                    <InputNumber id="salary" @bind-Value="Employee.Salary" class="form-control" />
                    <ValidationMessage For="() => Employee.Salary" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="datehired" class="form-label">DateHired:</label>
                    <InputDate id="datehired" @bind-Value="Employee.DateHired" class="form-control" />
                    <ValidationMessage For="() => Employee.DateHired" class="text-danger" />
                </div>
                
                <div>
                    <a class="btn btn-secondary" href="/employees"><i class="bi bi-arrow-left"></i>Back to List</a>
                    <button type="submit" class="btn btn-primary float-end">Save</button>
                </div>
            </EditForm>
        </div>
    </div>
}



@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Employee? Employee { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Employee ??= await context.Employees.FirstOrDefaultAsync(m => m.Id == Id);

        if (Employee is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateEmployee()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Employee!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!EmployeeExists(Employee!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/employees");
    }

    private bool EmployeeExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Employees.Any(e => e.Id == id);
    }
}
